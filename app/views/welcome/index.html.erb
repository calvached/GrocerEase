<%= form_tag recipes_path, method: 'get' do %>
  <div>
    <%= text_field_tag :search, params[:search] %>
    <div>
      <%= submit_tag "By Ingredient", name: "method" %>
      <%= submit_tag "By Recipe Name", name: "method" %>
    </div>
  </div>
<% end %>


<% @recipes.each do |recipe| %>
  <div>
    <%= recipe.name %>
  </div>
<% end %>


